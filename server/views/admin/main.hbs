<div class="container mt-5">
  <h1 class="text-center">Заказы</h1>
  <div class="row">
    <div class="col-sm-4">
      <form method="GET" action="/admin/filterByDate">
        <label for="filterDate">Показать заказы начиная с ...</label>
        <input type="date" name="filterDate" id="filterDate" class="form-control">
        <button type="submit" class="btn btn-primary mt-2">Показать</button>
      </form>
    </div>
  </div>
  <div class="row mt-5">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">№</th>
          <th scope="col">Дата</th>
          <th scope="col">Стоимость</th>
          <th scope="col">Город</th>
          <th scope="col">ID менеджера</th>
          <th scope="col">Имя менеджера</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <th scope="row">{{inc @index}}</th>
          <td>{{orderNumber}}</td>
          <td>{{orderDate}}</td>
          <td>{{orderPrice}}</td>
          <td>{{orderCity}}</td>
          <td>{{managerID}}</td>
          <td>{{fullName}}</td>
          <td>
            <a class="btn btn-info" href="/orders/edit/{{id}}" style="display: inline !important;"><i
                class="fa fa-edit"></i></a>
            <form action="/orders/{{id}}?_method=DELETE" method="POST" style="display: inline !important;">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger" style="display: inline !important;"><i
                  class="fa fa-trash"></i></button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>