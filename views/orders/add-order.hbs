{{#each errors}}
<div class="alert alert-danger my-3" style="max-width: 540px; margin: auto;">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{else}}
{{/each}}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>{{ local.createOrder }}</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="/orders">
            <fieldset class="form-group">
              <label for="orderNumber">{{ local.order.number }}</label>
              <input 
                id="orderNumber" 
                type="text"
                name="orderNumber" 
                class="form-control"
              >
            </fieldset>
            <fieldset class="form-group">
              <label for="orderPrice">{{ local.order.price }} </label>
              <input 
                id="orderPrice"
                type="text" 
                name="orderPrice"
                class="form-control"
                >
            </fieldset>
            <fieldset class="form-group">
              <label for="orderCity">{{ local.order.city }}</label>
              {{!-- <input 
                id="orderCity"
                type="text"
                name="orderCity"
                class="form-control"
                required
              > --}}
              <select name="orderCity" id="orderCity" class="form-control">
                <option value="Псков">Псков</option>
                <option value="Санкт-Петербург">Санкт-Петербург</option>
              </select>
            </fieldset>
            <button type="submit" class="btn btn-primary">{{ local.submit }}</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>