<div class="container mt-5">
  <h1 class="text-center">Заказы</h1>
  <div class="row">
    <div class="col-sm-4">
      <form method="GET" action="/admin/filterByDate">
        <label for="filterDate">Показать заказы начиная с ...</label>
        <input type="date" name="filterDate" id="filterDate" class="form-control">
        <button type="submit" class="btn btn-primary mt-2">Показать</button>
      </form>
    </div>
  </div>
  <div class="row mt-5">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID менеджера</th>
          <th scope="col">Имя менеджера</th>
          <th scope="col">Заказы</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{managerID}}</td>
          <td>{{fullName}}</td>
          <td>
            {{#each orders}}
            <p>{{orderNumber}} ({{orderDate}})</p>
            {{/each}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>